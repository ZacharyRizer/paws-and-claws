extends layout.pug
block content
    .page-container
        .forms-container-login
            form.user-login
                .user-form-header
                    h1 Login as an adopter
                    p We're glad you're back. Let's find you a best friend for thick and thin. Login below and in no time you'll be walking through the world with the perfect pup.
                input.email(name="email" type="text" placeholder="Email")
                input.password(name="password" type="password" placeholder="Password")
                .login-form-buttons
                    button.button(id="user-demo-login") Demo Adopter
                    button.submit(type="submit" id="user-login") Login Adopter
            span.divider
            form.shelter-login
                .shelter-form-header
                    h1 Login as a shelter
                    p Welcome back! Thanks for all your hard work. We appreciate you placing so many lovable dogs. We'd love for you to let us do our part to help you along.
                input.email(name="email" type="text" placeholder="Email")
                input.password(name="password" type="password" placeholder="Password")
                .login-form-buttons
                    button.button(id="shelter-demo-login") Demo Shelter
                    button.submit(type="submit" id="shelter-login") Login Shelter
    script(type="module" src="js/log-in.js")